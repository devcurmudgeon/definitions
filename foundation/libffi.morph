name: foundation/libffi.morph
kind: chunk
repo: upstream:libffi
ref: 77d4586cc47e8f4c02278afbc220145bba0d442b
build-system: autotools
install-commands:
- make DESTDIR="$DESTDIR"/ install
- mkdir -p "$DESTDIR"/usr/include
