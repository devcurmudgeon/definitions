name: bzip2
kind: chunk
repo: upstream:bzip2
ref: 8deafa68e52b230018c0318dc7959ff9af3ad2a5
configure-commands:
- sed -i -rf bzip2.morph-makefix.sed Makefile
build-commands:
- make -f Makefile-libbz2_so
- make
install-commands:
- make DESTDIR="$DESTDIR" PREFIX="$PREFIX" install
- install libbz2.so* "$DESTDIR$PREFIX/lib"
