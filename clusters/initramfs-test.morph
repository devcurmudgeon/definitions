name: initramfs-test
kind: cluster
description: ''
systems:
- morph: systems/base-system-x86_64-generic.morph
  deploy-defaults: {}
  deploy:
    system:
      type: rawdisk
      location: initramfs-system-x86_64.img
      DISK_SIZE: 1G
      HOSTNAME: initramfs-system
      INITRAMFS_PATH: boot/initramfs.gz
  subsystems:
  - morph: initramfs-x86_64
    deploy:
      initramfs:
        type: initramfs
        location: boot/initramfs.gz
