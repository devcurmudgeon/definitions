kind: cluster
name: gitlab-ci-runner-cluster
systems:
- morph: devel-system-x86_64-web
  deploy-defaults:
      AUTOSTART: no
      DISK_SIZE: 6G
      RAM_SIZE: 3G
      VCPUS: 2
      VERSION_LABEL: factory
  deploy:
    gitlab-ci-runner:
      type: kvm
      location: kvm+ssh://USER@HOST/gitlab-ci-runner/home/USER/gitlab-ci-runner.img
      HOSTNAME: gitlab-ci-runner
